
<!-- Section: Design Block -->
<section class="text-center">
  <!-- Background image -->
  <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 300px;
        "></div>
  <!-- Background image -->

  <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
    <div class="card-body py-5 px-md-5">

      <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
          <h2 class="fw-bold mb-5">Sign up now</h2>


          <form onsubmit="return signUpValidate()" action="/user_registration" method="post">
            <div class="mb-3 pb-1 d-flex justify-content-center">
              <img src="/images/Logo.png" alt="" style=" width:50%;">
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-outline mb-2">
                  <input type="text" id="form3Example1" class="form-control" name="firstname" />
                  <label class="form-label" for="form3Example1">First name</label>
                </div>
              </div>
              <div class="col-md-6 mb-2">
                <div class="form-outline">
                  <input type="text" id="form3Example2" class="form-control" name="lastname" />
                  <label class="form-label" for="form3Example2">Last name</label>
                </div>
              </div>
            </div>
            <div class="invalid-feedback">

            </div>
            <div class="form-outline mb-2">
              <input type="tel" id="number" class="form-control" name="mobile" />
              <label class="form-label" for="form2Example17">Mobile</label>
            </div>
            <div class="invalid-feedback">

            </div>
            {{#if emailChecker}}
            <div>{{emailChecker}}</div>
            {{/if}}
            <div class="form-outline mb-2">
              <input type="email" id="email" class="form-control" name="email" />
              <label class="form-label" for="form2Example17">Email address</label>
            </div>
            <div class="invalid-feedback"></div>
            <div class="form-outline mb-2">
              <input type="password" id="password" class="form-control" name="password" />
              <label class="form-label" for="form2Example27">Password</label>
            </div>
            <div class="invalid-feedback"></div>
            <div class="form-outline mb-2">
              <input type="password" id="repassword" class="form-control" name="cpassword" />
              <label class="form-label" for="form2Example27">Confirm Password</label>
            </div>
            {{!-- XXXXXXXXXXXXXX     REFFRERAL CODE     XXXXXXXXXXXXXXXXXXX --}}
            <div class="form-outline mb-2">
              <input type="password" id="referral" class="form-control" name="referralCode" />
              <label class="form-label" for="form2Example27">Referral Code <span class="text-muted">(Optional)</span> </label>
            </div>

            <div class="pt-1 mb-2">
              <button class="btn btn-dark btn-lg btn-block" type="submit">Signup</button>
            </div>

            <p class="mb-3 pb-lg-2" style="color: #393f81;">Already have an account? <a href="/user_signin"
                style="color: #393f81;">Login here</a>
            </p>
          </form>

        </div>
      </div>
    </div>
  </div>
</section>
<!-- Section: Design Block -->